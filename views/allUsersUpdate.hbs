<body>
    {{>nav}}
    <h1 class="display-5" >Admin Update User</h1>
<div id="update" class= "container-sm" >
    <div class="mb-3" >
        <form action="/allUsersUpdate/{{userId._id}}" method="POST">
            
            <div class="input-group mb-3" >
            <span class="input-group-text" id="inputGroup-sizing-default">NAME</span>
            <input required type="text" name="userName" id="userName"   /><br />
            </div>
            <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-sizing-default">@</span>
            <input required type="text" name="userEmail" id="userEmail"  /><br />
            </div>
            <button class="btn btn-success"  type="submit">Save Update</button>
        </form>
         {{#if message}}   
        <h4 class ="alert alert-danger mt-4">{{message}}</h4>
    {{/if}} 
        
    </div>
</div>






<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
