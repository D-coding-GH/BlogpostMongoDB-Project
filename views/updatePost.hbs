<body>
{{>nav}}
    <h1 class="display-5" >Update Post</h1>

<div class="container-sm">

    <div class="mb-3">
        {{#each updatePost}}
         {{!-- ////...........add blog post id to for each statement --}}
        <form action="/changePost/{{this._id}}" method="post">
             
            <label>post title</label>
            <input type="text" name="postTitle"  value="{{this.title}}"  ><br />

            <label>post body</label>

            <textarea id="body" class="text" cols="86" rows="20" name="postBody" value="{{this.body}}"  ></textarea>

            <button class="btn btn-success" type="submit">update</button>
        </form>

       {{/each}}
    </div>

</div>
 





<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>   
</body>
